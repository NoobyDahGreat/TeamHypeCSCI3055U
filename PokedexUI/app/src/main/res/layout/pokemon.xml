<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/pokemon_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="36sp"
        android:contentDescription="Pokemon Name"
        android:textAlignment="center" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/pokemon_description"
        android:layout_below="@+id/pokemon_sprite"
        android:layout_above="@+id/fav_button"
        android:background="@android:color/darker_gray"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:layout_margin="20dp" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/background_light"
        android:id="@+id/pokemon_sprite"
        android:cropToPadding="true"
        android:adjustViewBounds="true"
        android:contentDescription="Pokemon Sprite"
        android:scaleType="fitCenter"
        android:layout_width="200dp"
        android:layout_below="@+id/pokemon_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add to Favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fav_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white" />
</RelativeLayout>